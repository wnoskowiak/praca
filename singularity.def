Bootstrap: docker
From: ubuntu:20.04

%post
    # Update and install dependencies
    apt-get update && apt-get install -y software-properties-common

    add-apt-repository ppa:deadsnakes/ppa

    apt-get install -y \
        build-essential \
        wget \
        curl \
        git \
        libssl-dev \
        libffi-dev \
        python3.7 \
        python3.7-venv \
        python3.7-dev \
        python3-pip \
        openmpi-bin \
        libopenmpi-dev \
        default-mysql-client \
        libhdf5-dev

    # Create a symbolic link for python3.7
    ln -s /usr/bin/python3.7 /usr/bin/python

    # Upgrade pip
    python -m pip install --upgrade pip

    # Install mpi4py first
    python -m pip install mpi4py

    # Install h5py with MPI support
    HDF5_MPI="ON" CC=mpicc HDF5_DIR=/usr/lib/x86_64-linux-gnu/hdf5/mpich python -m pip install --no-binary=h5py h5py

    # Install other specified Python packages
    python -m pip install scipy jupyter matplotlib plotly pandas scikit-image particle pynuml==0.1

%environment
    # Set environment variables
    export PATH=/usr/local/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH

%runscript
    # Define the default command to run
    exec python "$@"

%labels
    Author Wojciech Noskowiak
    Version 1.0
    Description Singularity container with Python 3.7, MPI, and specified Python packages