Bootstrap: docker
From: ubuntu:20.04

%post
    # Update and install dependencies
     apt-get update && apt-get install -y software-properties-common

     add-apt-repository ppa:deadsnakes/ppa

     apt-get install -y \
        build-essential \
        wget \
        curl \
        git \
        libssl-dev \
        libffi-dev \
        python3.7 \
        python3.7-venv \
        python3.7-dev \
        python3-pip \
        openmpi-bin \
        pkg-config \
        libopenmpi-dev \
        libhdf5-mpi-dev

    # Create a symbolic link for python3.7
    ln -s /usr/bin/python3.7 /usr/bin/python

    # Build a MPI version of h5py
    # /opt/venv/bin/python3 -m pip uninstall h5py
    export CC=mpicc
    export HDF5_MPI="ON"
    python -m pip install --no-binary=h5py h5py

    # Upgrade pip
    python -m pip install --upgrade pip

    # Install specified Python packages
    python -m pip install scipy jupyter matplotlib plotly pandas scikit-image particle mpi4py pynuml==0.1

