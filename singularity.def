Bootstrap: docker
From: archlinux:latest

%post
    # Update and install dependencies
    pacman -Syu --noconfirm

    pacman -S --noconfirm \
        base-devel \
        wget \
        curl \
        git \
        openssl \
        libffi \
        python \
        python-virtualenv \
        python-pip \
        openmpi \
        # hdf5 \
        mariadb-clients \
        hdf5-openmpi

    # Upgrade pip
    python -m pip install --upgrade pip

    # Install mpi4py first
    python -m pip install mpi4py

    # Install h5py with MPI support
    # HDF5_MPI="ON" CC=mpicc HDF5_DIR=/usr/lib python -m pip install --no-binary=h5py h5py

    # Install other specified Python packages
    python -m pip install scipy jupyter matplotlib plotly pandas scikit-image particle pynuml==0.1

%environment
    # Set environment variables
    export PATH=/usr/local/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib:$LD_LIBRARY_PATH

%runscript
    # Define the default command to run
    exec python "$@"

%labels
    Author Wojciech Noskowiak
    Version 1.0
    Description Singularity container with Python 3.7, MPI, and specified Python packages